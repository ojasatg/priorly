{
    "name": "priorly",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "bun --filter './packages/**/*' dev",
        "format": "bun --filter './packages/**/*' format",
        "lint": "bun --filter './packages/**/*' lint",
        "lint:fix": "bun --filter './packages/**/*' lint:fix",
        "clean": "rm -rf node_modules",
        "clean:all": "rm -rf node_modules &&  bun --filter './packages/**/*' clean"
    },
    "workspaces": [
        "packages/*"
    ]
}
